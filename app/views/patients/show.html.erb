<h2> <%=@patient.name%> </h2>
<h3> Age: <%=@patient.age%> </h3>
<p> Appointments </p>
<ul>
  <% @patient.appointments.each do |appt| %>

    <li><%= link_to appt.doctor.name, doctor_path(appt.doctor)%>, <%=appt.appointment_datetime.strftime('%B %d, %Y')%> at <%=appt.appointment_datetime.strftime('%H:%M')%> </li>

  <%end%>
</ul>
