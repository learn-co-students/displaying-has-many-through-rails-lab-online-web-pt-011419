<h2> <%=@doctor.name%> </h2>
<h2> <%= @doctor.department %> </h2>

<p> Patients: </p>
<ul>
  <% @doctor.appointments.each do |appt| %>

  <li> <%= link_to appt.patient.name, patient_path(appt.patient) %>, <%=appt.appointment_datetime.strftime('%B %d, %Y')%> at <%=appt.appointment_datetime.strftime('%H:%M')%> .</li>

  <% end %>
</ul>
